<script>

    function downloadPdf(){
        let element = document.getElementById('salesReport');
        html2pdf().from(element).save();
    }


//downloading xlsheet

document.getElementById('xLsheet').addEventListener('click', function(){
        let table = document.getElementById('salesReport');
        let wB = XLSX.utils.table_to_book(table);//for converting table to excel workbook from excel library
        let wBOut = XLSX.write(wB, {bookType: 'xlsx', type: 'binary'});//write method to generate excel binary data from workbook

        function xlsx(xl){
            let buffer = new ArrayBuffer(xl.length);
            let view = new Uint8Array(buffer);
            for(let i = 0; i < xl.length; i++) view[i] = xl.charCodeAt(i) & 0xFF;
            return buffer;
        }

        let blob = new Blob([xlsx(wBOut)], {type: 'application/octet-stream'});
        saveAs(blob, 'table.xlsx');
    })

    


        
</script>





