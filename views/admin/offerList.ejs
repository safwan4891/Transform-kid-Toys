            <div class="right mt-5">
                <table class="table table-striped">
                    <thead>
                        
                      <tr>
                        <th scope="col" class="text-center"><b>Name</b></th>
                        <th scope="col" class="text-center"><b>Discount Type</b></th>
                        <th scope="col" class="text-center"><b>Expire On</b></th>
                        <th scope="col" class="text-center"><b>Discount(%)</b></th>
                        <th scope="col" class="text-center"><b>Disount On</b></th>
                        <th scope="col" class="text-center"><b>Action</b></th>
                        <th scope="col" class="text-center"><b>Edit</b></th>

                      </tr>
                    </thead>
                    <tbody>
        
                     
                        <%offers.forEach(offer=>{%>
                            <tr>
                                <td class="text-center"><%=offer.name%></td>
                                <td class="text-center"><%=offer.discountOn%></td>
                                <td class="text-center"><%=offer.expireOn%></td>
                                <td class="text-center"><%=offer.discountValue%></td>
                                <td class="text-center">
                       <% if (offer.discountOn === 'product' && offer.discountedProduct) { %>
                           <%= offer.discountedProduct.productName %>
                      <% } else if (offer.discountOn === 'category' && offer.discountedCategory) { %>
                     <%= offer.discountedCategory.name %>
                    <% } else { %>
                         N/A
                        <% } %>
                        </td>

                                <td class="text-center d-flex justify-content-center"> 
                                   
                                    
                                      <%if(offer.isActive){%>
                                        <button class="btn btn-danger" style="width: 80px;">
                                            <a href="/admin/blockoffer/<%= offer._id %>" class="text-white" style="text-decoration: none;">Block</a>
                                        </button>
                                    <% } else { %>
                                        <button class="btn btn-success" style="width: 80px;">
                                            <a href="/admin/blockoffer/<%= offer._id %>" class="text-white" style="text-decoration: none;">Unblock</a>
                                        </button>
                                    <% } %>
                                         
                                </td>
                                <td class="text-center">
                                    <a href="/admin/editoffer?id=<%=offer._id %>" class="text-white" style="text-decoration: none;"><button class="btn btn-info" style="width: 80px;" >Edit</button></a>
                                
                             </td>
                            </tr>
                            <%})%>
                    </tbody>
                    
                  </table>
