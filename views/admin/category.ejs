<script>

//validation form on submission




document.addEventListener('DOMContentLoaded', () => {
    const createCategoryBtn = document.getElementById('createCategoryBtn');
    const productNameInput = document.getElementById('product_name');

    createCategoryBtn.addEventListener('click', async (event) => {
        event.preventDefault();
        
        const name = productNameInput.value.trim();

        // Fetch existing categories
        const response = await fetch('/admin/categories');
        const existingCategories = await response.json();

        // Check if category name already exists
        if (existingCategories.some(category => category.name === name)) {
            alert('Category with this name already exists.');
            return;
        }

        // Submit the form if validation passes
        document.getElementById('addCategoryForm').submit();
    });
});





