    <script>

        //cancel Order

        function handleSelections(orderId, productId) {
            alert(productId)
            console.log(productId, "id");
            Swal.fire({
                title: "Are you sure?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#14A44D",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes"
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/admin/orderCancelled', {
                        method: "PATCH",
                        headers: { 'content-Type': 'application/json' },
                        body: JSON.stringify({ orderId, productId })
                    })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Something went wrong!');
                            }
                            return response.json();
                        })
                        .then(data => {
                            Swal.fire({
                                title: "Cancelled!",
                                text: "Your order has been cancelled.",
                                icon: "success",
                                showConfirmButton: false
                            });
                            setTimeout(() => {
                                location.reload();
                            }, 1000);
                        })
                        .catch(error => {
                            Swal.fire({
                                icon: "error",
                                title: "Oops...",
                                text: error.message || "Something went wrong!"
                            });
                        });
                }
            });

        }



        //deliver order
        function handleSelection(orderId,) {
            alert(orderId)
            console.log(orderId, "id");
            Swal.fire({
                title: "Are you sure?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#14A44D",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes"
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/admin/orderDelivered', {
                        method: "PATCH",
                        headers: { 'content-Type': 'application/json' },
                        body: JSON.stringify({ orderId })
                    })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Something went wrong!');
                            }
                            return response.json();
                        })
                        .then(data => {
                            Swal.fire({
                                title: "Delivered!",
                                text: "Your order has been Delivered.",
                                icon: "success",
                                showConfirmButton: false
                            });
                            setTimeout(() => {
                                location.reload();
                            }, 1000);
                        })
                        .catch(error => {
                            Swal.fire({
                                icon: "error",
                                title: "Oops...",
                                text: error.message || "Something went wrong!"
                            });
                        });
                }
            });

        }
