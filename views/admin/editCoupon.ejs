<script>

     // Initialize datepicker
        $('.datepicker').datepicker({
            format: 'dd-mm-yyyy', // Date format: dd-mm-yyyy
            autoclose: true // Close the datepicker when a date is selected
        });



        function validateCouponForm() {
    const couponName = document.getElementById('couponname').value.trim();
    const expireDate = document.getElementById('expiredate').value.trim();
    const offerPrice = document.getElementById('offerprice').value.trim();
    const minimumPrice = document.getElementById('minimumprice').value.trim();
    const code = document.getElementById('code').value.trim();
    const currentDate = new Date();
    currentDate.setHours(0, 0, 0, 0); // Set hours to 0 for comparison with selected date
    const minimumPriceValue = parseFloat(minimumPrice);

    // Parse the selected expire date
    const [day, month, year] = expireDate.split('-');
    const selectedDate = new Date(`${year}-${month}-${day}`);
    selectedDate.setHours(0, 0, 0, 0); // Set hours to 0 for comparison

    // Reset error messages
    document.getElementById('couponNameError').innerText = '';
    document.getElementById('expireDateError').innerText = '';
    document.getElementById('offerPriceError').innerText = '';
    document.getElementById('minimumPriceError').innerText = '';
    document.getElementById('codeError').innerText = '';

    let isValid = true;

 console.log(couponName)
    // Validate coupon name
    if (!couponName) {
        document.getElementById('couponNameError').innerText = 'Coupon Name is required';
        isValid = false;
    
    


    // Validate expire date format
    const dateRegex = /^\d{2}-\d{2}-\d{4}$/;
    if (!dateRegex.test(expireDate)) {
        document.getElementById('expireDateError').innerText = 'Invalid date format (dd-mm-yyyy)';
        isValid = false;
    }

    // Check if the selected date is a future date
    if (selectedDate <= currentDate) {
        document.getElementById('expireDateError').innerText = 'Expire date must be a future date';
        isValid = false;
    }

    // Validate offer price
    if (!offerPrice) {
        document.getElementById('offerPriceError').innerText = 'Offer Price is required';
        isValid = false;
    } else if (parseInt(offerPrice) >= parseInt(minimumPrice)) {
        document.getElementById('offerPriceError').innerText = 'Offer Price must be less than Minimum Price';
        isValid = false;
    }

    // Validate minimum price
    if (!minimumPrice) {
        document.getElementById('minimumPriceError').innerText = 'Minimum Price is required';
        isValid = false;
    }
    if (isNaN(minimumPriceValue) || minimumPriceValue < 1000) {
        document.getElementById('minimumPriceError').innerText = 'Minimum Price must be greater than or equal to 1000';
        isValid = false;
    }

    // Validate coupon code
    if (!code) {
        document.getElementById('codeError').innerText = 'Coupon Code is required';
        isValid = false;
    }

    return isValid;
}
        }

